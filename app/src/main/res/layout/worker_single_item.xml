<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_worker_id"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_worker_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_worker_id"
            android:text="good"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_worker_time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_worker_id"
            android:layout_marginTop="18dp"
            android:textSize="18sp"

            android:text="11d11h11m11s" />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_worker_time_elapsed"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:tint="@color/colorGrey"
            android:src="@drawable/ic_chevron_right_black_24dp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>