<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <Spinner
                android:id="@+id/spinner_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/miner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_select"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_miner_amt"
                    style="@style/top_header_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 Miners" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_miner_active"
                        style="@style/top_header_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Active: 0" />

                    <TextView
                        android:id="@+id/tv_miner_inactive"
                        style="@style/top_header_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Inactive: 0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/miner_container"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_live_hash"
                            style="@style/top_header_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00" />

                        <TextView
                            android:id="@+id/tv_live_hash_desc"
                            style="@style/top_header_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Live HashRate" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_balance_amt"
                            style="@style/top_header_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00000000 BTC" />

                        <TextView
                            android:id="@+id/tv_balance_desc"
                            style="@style/top_header_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Balance" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_miner_hash"
                            style="@style/top_header_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00" />

                        <TextView
                            android:id="@+id/tv_miner_hash_desc"
                            style="@style/top_header_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Miner HashRate" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tot_earn_amt"
                            style="@style/top_header_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00000000 BTC" />

                        <TextView
                            android:id="@+id/tv_tot_earn_amt_desc"
                            style="@style/top_header_subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Earning" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/sub_body_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Earnings" />

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Conversion Rate (USD)" />

                    <TextView
                        android:id="@+id/tv_account_conversion_rate"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Earn (USD)" />

                    <TextView
                        android:id="@+id/tv_account_earn_usd"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Balance (USD)" />

                    <TextView
                        android:id="@+id/tv_account_balance_amt_usd"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/sub_body_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated earning" />

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_estimated_earning_day_desc"
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day" />

                    <TextView
                        android:id="@+id/tv_estimated_earning_day"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_estimated_earning_week_desc"
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Week" />

                    <TextView
                        android:id="@+id/tv_estimated_earning_week"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_estimated_earning_month_desc"
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Month" />

                    <TextView
                        android:id="@+id/tv_estimated_earning_month"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>

                <LinearLayout
                    style="@style/sub_body_item_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_estimated_earning_year_desc"
                        style="@style/body_item_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Year" />

                    <TextView
                        android:id="@+id/tv_estimated_earning_year"
                        style="@style/body_item_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATA" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/sub_body_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Miner" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>